{{> head title=title}}
<body>
  {{> nav}}
  <div class="page page--center">
    <div class="container narrow">
      <div class="card">
        <h2>Create User</h2>
        {{#if status}}
          <div class="status-message">{{status}}</div>
        {{/if}}
        <form method="post" action="/dashboard/users/new" class="vertical-form">
          <div class="form-group">
            <label for="username">Username</label>
            <input
              type="text"
              id="username"
              name="username"
              placeholder="username"
              required
              minlength="3"
              autofocus
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Minimum 8 characters"
              required
              minlength="8"
            />
          </div>
          <div class="form-group">
            <label for="role">Role</label>
            <select id="role" name="role" required>
              <option value="VIEWER">Viewer - Can only view devices</option>
              <option value="TECHNICIAN">Technician - Can view and send commands</option>
              <option value="ADMIN">Admin - Full access</option>
            </select>
          </div>
          <button type="submit" class="btn-primary">Create User</button>
        </form>
        <p class="login-helper">
          <a href="/dashboard/users">‚Üê Back to Users</a>
        </p>
      </div>
    </div>
  </div>
{{> footer}}

